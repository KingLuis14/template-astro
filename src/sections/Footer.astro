---
import { Icon } from "astro-icon/components";
---

<footer class="footer">
  <div class="footer__container wrapper">
    <div class="footer__icons">
      <a href="https://github.com/KingLuis14" target="_blank" class="icon-circle footer__icon">
        <Icon name="github" size={20} color="var(--blue-600)" />
      </a>
      <a href="https://codepen.io/Luis-Enrique-Calero-Anchelia" target="_blank" class="icon-circle footer__icon">
        <Icon name="codepen" size={20} color="var(--blue-600)" />
      </a>
      <a href="https://www.facebook.com/profile.php?id=100085714924828" target="_blank" class="icon-circle footer__icon">
        <Icon name="facebook" size={20} color="var(--blue-600)" />
      </a>
    </div>
    <p class="color-white-000">@ <time id="time" datetime=""></time>todos los derechos reservados</p>
  </div>
  
</footer>

<style lang="scss" is:global>
  .footer {
    display: grid;
    padding-block: calc( var(--padding-section) / 2);
    row-gap: 1.5rem;
    // gap: 1.5rem;
    text-align: center;
    background-color: var(--blue-600);
    

    &__container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      // background-color: crimson;
    }

    &__icons {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    &__icon {
      --width-circle-icon: 40px;
      --color-circle-icon: white;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
     // Obtener la fecha actual
     const currentDate = new Date();
    
    // Obtener los componentes de la fecha
    const year = currentDate.getFullYear();
    const month = String(currentDate.getMonth() + 1).padStart(2, '0'); // Aseguramos que el mes tenga dos dígitos
    const day = String(currentDate.getDate()).padStart(2, '0'); // Aseguramos que el día tenga dos dígitos
    const hours = String(currentDate.getHours()).padStart(2, '0'); // Aseguramos que la hora tenga dos dígitos
    const minutes = String(currentDate.getMinutes()).padStart(2, '0'); // Aseguramos que los minutos tengan dos dígitos
    const seconds = String(currentDate.getSeconds()).padStart(2, '0'); // Aseguramos que los segundos tengan dos dígitos

    // Formatear la fecha en el formato adecuado
    const formattedDate = `${year}-${month}-${day}T${hours}:${minutes}:${seconds}`;
    
    // Establecer la fecha en el atributo datetime y en el contenido del <time>
    const timeElement = document.getElementById('time');
    timeElement.setAttribute('datetime', formattedDate);
    timeElement.textContent = `${year} `;




  });
</script>